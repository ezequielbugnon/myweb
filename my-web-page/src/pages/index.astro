---
import Layout from "../layouts/Layout.astro";
import MyPicture from "../components/myPicture.astro";
import mobileImage from "../images/myimg.jpeg";
import desktopImage from "../images/myimg.jpeg";
import Word from "../components/word"
---

<Layout title="Welcome to Ezequiel Bugnon's web">
  <main>
    <div class="container-name">
      <div class="name">EZEQUIEL</div>
      <div class="box-blue">BUGNON</div>
    </div>

    <div class="conteiner-img">
      <div class="mypicture">
        <MyPicture
          mobileImgUrl={mobileImage}
          desktopImgUrl={desktopImage}
          alt="user profile picture"
        />
      </div>
      <div class="role">
        <div>
          <div>I'M SOFTWARE</div>
          <Word  client:load />
        </div>

        <div>
          <div class="icons">
            <a href="mailto:bugnonezequiel@gmail.com">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon icon-tabler icon-tabler-inbox"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
                ></path>
                <path d="M4 13h3l3 3h4l3 -3h3"></path>
              </svg>
            </a>
            <a href="https://www.linkedin.com/in/ezequiel-bugnon/" target="_blank">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon icon-tabler icon-tabler-brand-linkedin"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
                ></path>
                <path d="M8 11l0 5"></path>
                <path d="M8 8l0 .01"></path>
                <path d="M12 16l0 -5"></path>
                <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
              </svg>
            </a>
            <a href="https://github.com/ezequielbugnon" target="_blank">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="28" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
             </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  div {
    font-weight: bold;
  }
  .container-name {
    position: absolute;
    top: 0;
    height: 30vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  .name {
    color: var(--v-blue);
    font-size: 30px;
    padding-left: 20px;
    animation: 3s fade ease;
  }
  .box-blue {
    background-color: var(--v-blue);
    height: 80px;
    width: 250px;
    font-size: 40px;
    padding-left: 20px;
    animation: 1s traslateBox ease-out;
    z-index: -10;
  }
  .conteiner-img {
    display: flex;
    height: 70vh;
    position: absolute;
    bottom: 0;
  }
  .mypicture {
    margin-right: 10px;
    margin-top: 20px;
    margin-bottom: 0;
  }
  .role {
    margin-top: 25px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .icons {
    display: flex;
    margin-top: 10px;
  }
  .icons a {
    color: white;
    width: 40px;
    cursor: pointer;
    transition: color 0.3s ease;
    margin-bottom: 40px;
    animation: 2s fade ease-out;
  }
  .icons a:visited{
    color: inherit; 
    text-decoration: none;
  }
  .icons a:hover {
    color: var(--v-blue);
  }

  @keyframes traslateBox {
    0% {
      transform: translateY(100px); 
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 100%;   
    }
	}

  @keyframes fade {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 100%;   
    }
	}

  @media screen and (min-width: 610px) {
    .role div{
      font-size: 28px;
    }
  }

  @media screen and (min-width: 710px) {
    .role div{
      font-size: 32px;
    }

    .icons a svg {
      width: 28px;
      height: 28px;
    }
    
  }

  @media screen and (min-width: 910px) {
    .role div{
      font-size: 40px;
    }
  }
</style>
