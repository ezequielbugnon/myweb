<style>
	.firstParagraph{
		height: 30vh;
		width: 100%;
		position: absolute;
		display: flex;
		justify-content: center;
		top: 0;
		z-index: -10;
	}
	.article{
		position: absolute;
		bottom: 0;
		height: 70vh;
		width: 100%;
		padding: 10px;
		margin-top: 20px;
		color: var(--wh-color);
		display: flex;
		justify-content: center;
	}
	.article article{
		max-width: 1000px;
	}
	.article article p {
		padding-bottom: 10px;
		padding-top: 10px;
		font-size: 14px;
		animation: 4s fadeIn ease;
	}
	.firstParagraph div{
		max-width: 1000px;
		padding: 10px;
		display: flex;
		align-items:flex-end;
		height: 100%;
	}
	.firstParagraph div h2{
		font-size: 17px;
		font-weight: bold;
		color: var(--v-blue);
		animation: 1.2s fadeIn ease-in-out;
	}

	@keyframes fadeIn {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}

   @media screen and (min-width: 610px) {
	.firstParagraph div h2{
		font-size: 24px;
	}
	.article article p {
		font-size: 20px;
	}
  }

  @media screen and (min-width: 720px) {
	.firstParagraph div h2{
		font-size: 28px;
	}
	.article article p {
		font-size: 22px;
	}
  }

  @media screen and (min-width: 910px) {
	.firstParagraph div h2{
		font-size: 30px;
	}

	.article article p {
		font-size: 26px;
	}
  }
</style>
